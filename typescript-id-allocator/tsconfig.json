{
	"exclude": ["dist", "node_modules"],
	"compilerOptions": {
		"target": "es2017",
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"sourceMap": false,
		"noImplicitAny": false,
		"incremental": true,
		"types": ["mocha"],
		"strict": true,
		"pretty": true,
		"lib": ["ES2017", "ES2018.Promise", "DOM", "DOM.Iterable"],
	},
}
